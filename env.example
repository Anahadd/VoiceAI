# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Vapi
VAPI_API_KEY=           # required for server->Vapi requests
VAPI_WEBHOOK_SECRET=    # if Vapi supports signature validation; otherwise unused
VAPI_OUTBOUND_ENABLED=false
VAPI_ASSISTANT_ID=      # if using outbound test script
VAPI_CALLER_NUMBER=     # E.164 if using outbound
VAPI_CALLEE_NUMBER=     # E.164 if using outbound

# STT
STT_PROVIDER=whisper     # whisper | deepgram
OPENAI_API_KEY=
DEEPGRAM_API_KEY=

# TTS
ELEVEN_API_KEY=
ELEVEN_VOICE_ID=         # default voice id
TTS_FALLBACK_PROVIDER=none # meta | azure | none

# CRM
HUBSPOT_PRIVATE_APP_TOKEN=
HUBSPOT_PIPELINE_ID=     # optional; default deals pipeline if used
HUBSPOT_SOURCE=VoiceAgent

# Airtable
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_RESERVATIONS_TABLE=Reservations
AIRTABLE_MENU_TABLE=Menu

# Simulation/Testing
SIM_TRANSCRIPT_SPEED=fast   # fast|realtime
LOG_LEVEL=debug
